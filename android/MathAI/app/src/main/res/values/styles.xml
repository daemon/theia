<resources>

    <style name="GreenLeafTabLayout" parent="Widget.Design.TabLayout">
        <item name="colorPrimary">@color/greenleafActive</item>
    </style>
    <style name="GreenLeafPrimaryButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/greenleafActive</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="GreenLeafChatBar">
        <item name="background">@color/colorPrimaryDark</item>
    </style>
    <style name="AppErrorTheme" parent="AppTheme">
        <item name="colorAccent">@color/greenleafError</item>
    </style>
    <style name="GreenLeafButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
